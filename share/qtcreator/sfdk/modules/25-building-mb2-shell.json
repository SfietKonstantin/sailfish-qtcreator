{
    "version": 3,
    "domain": "building",
    "trBrief": "Building software",

    "worker":
    {
        "type": "engine-command",
        "version": 1,
        "program": "mb2",
        "directTerminalInput": true
    },

    "commands":
    [
        {
            "name": "build-shell",
            "trSynopsis": "[<command> [<arg>...]]",
